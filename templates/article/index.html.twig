{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Category</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.name }}</td>
                <td>{{ article.description }}</td>
                <td>{{ article.category.name }}</td>
                <td>{{ article.price }}</td>
                <td>
                  <div class="btn-group" role="group" aria-label="Basic example">
                    <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-primary">Show</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-success">Edit</a>
                    <a href="{{ path('article_delete', {'id': article.id}) }}" class="btn btn-danger">Delete</a>
                  </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('article_new') }}">Create new</a>
{% endblock %}
