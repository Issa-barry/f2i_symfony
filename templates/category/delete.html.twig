{% extends 'base.html.twig' %}

{% block title %}Delete Category{% endblock %}

{% block body %}
    <h1>Deleting Category</h1>
    <div class="alert alert-danger" role="alert">
      Please confirm to delete the category : "{{ category }}"
    </div>
    <form method="post" action="{{ path('category_delete', {'id': category.id}) }}">
      <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
      <button class="btn btn-danger">Delete</button>
      <a href="{{ path('category_index') }}" class="btn btn-secondary">Cancel</a>
    </form>
{% endblock %}
